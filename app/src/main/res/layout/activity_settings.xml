<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mxi.krykeyapp.SettingsActivity" >

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="10" >

        <LinearLayout
            android:id="@+id/setting_ll_show_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:orientation="vertical"
            android:weightSum="7.5" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
                
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="100dp"
                    android:padding="50dp"
                    android:src="@drawable/settings_editscreen_logo_top_black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/setting_tv_appinfo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="APP INFO"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TableRow
                                android:id="@+id/tableRow1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Name :"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:id="@+id/setting_tv_name1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>
                            
                             <TableRow
                                android:id="@+id/tableRow12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_mail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Email :"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:id="@+id/setting_tv_mail1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>
                            
                            

                            <TableRow
                                android:id="@+id/tableRow2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_city"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="City :"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:id="@+id/setting_tv_city1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_country"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Country :"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />

                                <TextView
                                    android:id="@+id/setting_tv_country1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="TimeZone :  "
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                                 <TextView
                                    android:id="@+id/setting_tv_time1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="0 GTM"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_installed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Installed :"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                                 <TextView
                                    android:id="@+id/setting_tv_installed1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="23.03.2015"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_updated"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Updated :"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                                 <TextView
                                    android:id="@+id/setting_tv_updated1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="27.03.2015"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <TextView
                                    android:id="@+id/setting_tv_version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="Version :"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                                <TextView
                                    android:id="@+id/setting_tv_version1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:text="1.1.0"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:textColor="@android:color/white" />
                            </TableRow>
                        </TableLayout>

                        <TextView
                            android:id="@+id/setting_tv_copyright"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Copyright © 2006-2015"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@android:color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/settings_checkupdate" />

                        <ImageView
                            android:id="@+id/setting_edit"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/settings_edit" />
                    </LinearLayout>
                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/seting_tv_tap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="TAP PRESET NUMBER TO CLEAR"
                android:textColor="#fff" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >
                 <ImageView
                android:id="@+id/setting_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/settings_preset_01" />

            <ImageView
                android:id="@+id/setting_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/settings_preset_02" />

            <ImageView
                android:id="@+id/setting_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/settings_preset_03" />

            <ImageView
                android:id="@+id/setting_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/settings_preset_04" />
            </LinearLayout>

        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight="1.5"
             android:gravity="center_vertical"
             android:orientation="horizontal" >

            <ImageView
                android:id="@+id/search_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/androidnavigationtunein" />

            <ImageView
                android:id="@+id/search_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/androidnavigationsearch" />

            <ImageView
                android:id="@+id/search_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/androidnavigationlocale" />

            <ImageView
                android:id="@+id/search_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:src="@drawable/androidnavigationsettings" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>